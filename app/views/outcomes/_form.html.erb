<%= form_for(@outcome) do |f| %>
  <% if @outcome.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@outcome.errors.count, "error") %> prohibieron que fuera registrado:</h2>

      <ul>
      <% @outcome.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :amount, 'Cantidad' %><br>
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :owner, '¿Para quién?' %><br>
    <%= f.text_field :owner %>
  </div>
  <div class="field">
    <%= f.label :description, 'Descripción' %><br>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit 'OK' %>
  </div>
<% end %>
